class Solution {
public:
    char findTheDifference(string s, string t) {
        sort(s.begin(), s.end());
        sort(t.begin(), t.end());

        int i = 0, j = 0;
        while (j < t.length())
        {
            if (s[i] == t[j])
            {
                i++;
                j++;
            }

            else break;
        }

        return t[j];
    }
};

